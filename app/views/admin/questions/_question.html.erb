 <tr>
   <td><%= question.body %></td>
   <td><%= link_to t('.show'), admin_question_path(question), class: "btn btn-sm btn-outline-secondary" %></td>
   <td><%= link_to t('.edit'), edit_admin_question_path(question), class: "btn btn-sm btn-outline-secondary" %></td>
   <td><%= link_to t('.delete'),
                   admin_question_path(question),
                   method: :delete,
                   data: { confirm: 'Are you sure?' },
                   class: "btn btn-sm btn-outline-danger" %></td>
 </tr>