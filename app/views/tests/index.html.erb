<h1>Все наши тесты</h1>
<br>
<p>
  <%= link_to 'Создать тест', new_test_path, :class => "btn btn-warning" %>
</p>

<% @test.each do |test| %>
  <div class="alert alert-light">
    <h3>Тест: <%= test.title %></h3>
    <p>Уровень: <%= test.level %></p>
    <p>Количество вопросов: <%= test.questions.count %></p>
    <%= link_to "Смотреть вопросы", test_path(test), :class => 'btn btn-outline-primary' %>
    <%= link_to 'Редактировать тест', edit_test_path(test), :class => "btn btn-warning" %>
    <%= link_to 'Удалить тест', test_path(@test), method: :delete, data: {confirm: 'Хотите удалить тест?'}, :class => "btn btn-danger" %>
  </div>
  <hr>
<% end %>
