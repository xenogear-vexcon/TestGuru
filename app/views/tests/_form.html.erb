<%= form_with model: @test, local: true do |form| %>
<%= render 'shared/errors', resource: @test %>
  <p>
    <%= form.label :title %>
    <%= form.text_field :title, id: :test_title, class: 'form-control' %>
  </p>
  <p>
    <%= form.label :level %>
    <%= form.number_field :level, id: :test_level%>
  </p>
  <p>
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true%>
  </p>

  <!-- на время теста -->
  <p>
    <%= form.label :author_id %>
    <%= form.collection_select :author_id, User.all, :id, :name, prompt: true%>
  </p>

  <p><%= form.submit %></p>
  <p><%= link_to 'Back', tests_path, class: "btn btn-warning" %></p>
<% end %>