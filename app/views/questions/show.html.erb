<h1>Тест <%= @question.test.title %></h1>
<h3><b>Вопрос:</b> <%= @question.body %></h3>

<h4>Ответы:</h4>

<ol>
	<%= render @question.answers %>
</ol>

<%= link_to 'New answer', new_question_answer_path(@question), :class => "btn btn-warning" %>
<%= link_to 'Edit', edit_question_path(@question), :class => "btn btn-warning" %>
<%= link_to 'Delete', question_path(@question), method: :delete, data: {confirm: 'Want to delete a question?'}, :class => "btn btn-danger" %>
<%= link_to 'Back', test_path(@question.test), :class => "btn btn-warning" %>
<hr>
