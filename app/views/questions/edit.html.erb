<h2>Редактирование вопроса</h2>
<%= form_with model: @question do |f| %>

	<p>Вопрос<br>
		<%= f.text_area(:body, {:class => 'form-control'}) %>
	</p>
	<p>
		<%= f.submit("Обновить", {:class => 'btn btn-success'})%>
	</p>
<% end %>
<%= link_to 'Назад к вопросу', question_path(@question), :class => "btn btn-warning"%>