<%= form_with model: [@test, @question], local: true do |f| %>
	<% render 'shared/errors', resource: @question %>
	<p>Вопрос<br>
		<%= f.text_area(:body, {:class => 'form-control'}) %>
	</p>
	<p>
		<%= f.submit({:class => 'btn btn-success'})%>
	</p>
<% end %>
<%= link_to 'Back', test_path(@question.test), :class => "btn btn-warning"%>