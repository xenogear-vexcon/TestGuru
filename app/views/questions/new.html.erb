<h2>Добавление нового вопроса</h2>

<form accept-charset="UTF-8" action="/tests/<%= params[:test_id] %>/questions/" data-remote="true" method="post">
<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />

	<p>
		<label for="question-body">Вопрос</label>
		<input type="text" name="question[body]" id="question-body" class='form-control'>
	</p>
	<p>
		<input type="submit" value="Добавить вопрос" class='btn btn-success'>
	</p>
</form>
