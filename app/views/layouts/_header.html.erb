<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
	
  <h5><%= link_to 'TestGuru', root_path, :class => "my-0 mr-md-auto font-weight-normal" %></h5>
  <% if user_signed_in? %>
		<p class="nav user"><%= t('.welcome') %>, <b><%= current_user.name %>!</b></p>
		<%= link_to t('.sign_out'), destroy_user_session_path, method: :delete, :class => "btn btn-outline-primary" %>
  <% else %>
		<%= link_to t('.registration'), new_user_registration_path, :class => "btn btn-outline-primary" %>
		<%= link_to t('.sign_in'), new_user_session_path, :class => "btn btn-outline-primary" %>
  <% end %>
</div>