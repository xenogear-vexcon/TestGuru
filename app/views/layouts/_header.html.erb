<header class="blog-header mt-3">
  <div class="row flex-nowrap justify-content-between align-items-center">
    <div class="col-4 pt-1">
      <%= link_to 'Main page', root_path, :class => "text-muted" %>
    </div>
    <div class="col-4 text-center">
      <h2 class="blog-header-logo text-dark">TestGuru</h2>
    </div>
    <div class="col-4 d-flex justify-content-end align-items-center">
      <% if user_signed_in? %>
        <p class="nav user"><%= t('.welcome') %>, <b><%= current_user.name %>!</b> </p>
        <%= link_to t('.sign_out'), destroy_user_session_path, method: :delete, :class => "btn btn-sm btn-outline-secondary" %>
      <% else %>
        <%= link_to t('.registration'), new_user_registration_path, :class => "btn btn-sm btn-outline-secondary" %>
        <%= link_to t('.sign_in'), new_user_session_path, :class => "btn btn-sm btn-outline-secondary" %>
      <% end %>
    </div>
  </div>
  <hr>
</header>