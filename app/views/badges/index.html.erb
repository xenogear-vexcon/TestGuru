<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <h1><%= t('.header') %></h1>
    <br>
    <%= render 'shared/errors', resource: @badge %>
    <br><br>

    <% if @user_badges.present? %>

      <table class="table">
        <thead>
          <tr>
            <th scope="col"><%= t('.title') %></th>
            <th scope="col"><%= t('.image') %></th>
          </tr>
        </thead>

        <%= render @user_badges %>

      </table>
    <% end %>

  </div>
  <div><%= link_to t('.back'), root_path, class: "btn btn-sm btn-outline-dark" %></div>
</div>