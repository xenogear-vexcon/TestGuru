<header class="blog-header py-3">
  <div class="navbar navbar-dark bg-dark shadow-sm">
    <div class="navbar-brand d-flex align-items-center">
      <%= t('.title') %>
    </div>
    <div class="navbar-brand d-flex align-items-center">
      <h2><%= link_to 'TestGuru', root_path, class:"blog-header-logo text-white" %></h2>
    </div>
    <div class="col-4 d-flex justify-content-end align-items-center">
      <% if user_signed_in? %>
        <div class="text-white"><%= t('.welcome') %>, <b><%= current_user.name %>!</b></div>
        <%= link_to t('.main_page'), admin_root_path, class:"btn btn-outline-success my-2 my-sm-0" %>
        <%= link_to t('.admin_gists'), admin_gists_path, class:"btn btn-outline-success my-2 my-sm-0" %>
        <%= link_to t('.sign_out'), destroy_user_session_path, method: :delete, class:"btn btn-outline-success my-2 my-sm-0" %>
      <% end %>
    </div>
  </div>
</header>