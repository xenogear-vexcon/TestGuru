<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <h2><%= t('.sign_up') %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-group">
      <p>
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, placeholder: "name", class: 'form-control' %>
      </p>

      <p>
        <%= f.label :email %><br />
        <%= f.email_field :email, placeholder: "email", class: 'form-control' %>
      </p>

      <p>
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
        <% end %><br />
        <%= f.password_field :password, placeholder: "new-password", class: 'password-form' %>
      </p>

      <p>
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation, placeholder: "new-password", class: 'password-confirmation-form' %>
        <%= octicon 'check', class: 'text-success hide', id: 'octicon-check' %>
        <%= octicon 'alert', class: 'text-danger hide', id: 'octicon-alert' %>
      </p>
      <br>
      <div>
        <%= f.submit t('.sign_up'), class: 'btn btn-sm btn-outline-secondary registration-confirm' %>
      </div>
    <% end %>
    <div class="mt-1">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>